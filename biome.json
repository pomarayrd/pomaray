{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"indentWidth": 2
	},
	"files": {
		"ignore": ["node_modules/**", ".next/**"],
		"include": ["src/**"]
	}
}
